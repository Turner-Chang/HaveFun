@page
@model HaveFun.Controllers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ChatRoom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChatRoom.MessageText" class="control-label"></label>
                <input asp-for="ChatRoom.MessageText" class="form-control" />
                <span asp-validation-for="ChatRoom.MessageText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatRoom.CreateTime" class="control-label"></label>
                <input asp-for="ChatRoom.CreateTime" class="form-control" />
                <span asp-validation-for="ChatRoom.CreateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatRoom.User1Id" class="control-label"></label>
                <select asp-for="ChatRoom.User1Id" class ="form-control" asp-items="ViewBag.User1Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChatRoom.User2Id" class="control-label"></label>
                <select asp-for="ChatRoom.User2Id" class ="form-control" asp-items="ViewBag.User2Id"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ChatRoom.IsRead" /> @Html.DisplayNameFor(model => model.ChatRoom.IsRead)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
