<div class="tab-pane fade" id="gt6" role="tabpanel" aria-labelledby="gt6-tab">
	<title>您的購買記錄</title>
    <div id="app_PayHistory">
        <h1>會員購買記錄</h1>
        <div v-if="transactions.length === 0">
            <p>沒有找到購買紀錄。</p>
        </div>
        <div v-else>
            <table>
                <thead>
                    <tr>
                        <th>購買日期</th>
                        <th>購買品項</th>
                        <th>購買金額</th>
                        <th>購買狀態</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="transaction in transactions" :key="transaction.id">
                        <td>{{ formatDate(transaction.date) }}</td>
                        <td>{{ getProductDisplayName(transaction.product) }}</td>                        
                        <td>{{ formatCurrency(transaction.amount) }}</td>
                        <td>{{ getStatusDisplay(transaction.status) }}</td>
                        <td v-if="transaction.status === 0" >
                            <button @@click="refund(transaction.id)">退款申請</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #f4f4f4;
    }

    button {
        padding: 5px 10px;
        background-color: #ff5722;
        color: white;
        border: none;
        cursor: pointer;
    }

        button:hover {
            background-color: #e64a19;
        }
</style>

<script>    
    var app_PayHistory = Vue.createApp({
        data() {
            return {
                transactions: [] // 存儲交易記錄
            };
        },
        methods: {
            fetchTransactions() {
                // 請求後端 API 獲取購買紀錄
                fetch(`${baseAddress}/api/TransactionsPayApi/user/${@ViewBag.UserId}`)
                    .then(response => response.json())
                    .then(data => {
                        this.transactions = data;
                    })
                    .catch(error => {
                        console.error('Error fetching data:', error);
                    });
            },
            formatDate(date) {
                const options = { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' };
                return new Date(date).toLocaleString('zh-Hant', options);
            },
            formatCurrency(amount) {
                return new Intl.NumberFormat('zh-Hant', { style: 'currency', currency: 'TWD' }).format(amount);
            },
            getProductDisplayName(productId) {
                // 根據產品 ID 返回對應的顯示名稱
                if (productId === 0) {
                    return "白金會員";
                } else if (productId === 2) {
                    return "其他產品名稱"; // 根據實際情況調整
                } else {
                    return "未知產品";
                }
            },
            getStatusDisplay(status) {
                // 根據 Status 返回對應的顯示文本
                switch (status) {
                    case 0:
                        return "成功";
                    case 1:
                        return "失敗";
                    case 2:
                        return "等待";
                    case 3:
                        return "審核中";
                    case 4:
                        return "已退款";
                    default:
                        return "未知";
                }
            },
            refund(transactionId) {
				if (confirm("確定要退款嗎？")) {
					// 將狀態更新為 3 (審核中)
                    fetch(`${baseAddress}/api/TransactionsPayApi/${transactionId}/status`, {
						method: 'PATCH',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify(3) // 更新狀態為審核中
					})
				    .then(response => {
						if (response.ok) {
							alert('退款申請成功！');
							// 更新交易記錄列表
							this.fetchTransactions();
						} else {
							alert('退款申請失敗！');
						}
					})
					.catch(error => {
						console.error('Error refunding:', error);
						alert('退款失敗！');
					});
				}
            }
        },
        mounted() { 
            // 在 mounted 階段加載購買紀錄
            this.fetchTransactions();
        },
    }).mount("#app_PayHistory");
</script>

