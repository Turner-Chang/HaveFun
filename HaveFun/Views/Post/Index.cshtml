    <script>
        const postPlatform = Vue.createApp({
            data() {
                return {
                    baseAddress: "https://localhost:7152",
                    posts: [],
                    ratItems:[],
                    watingToRatPost:[],
                    wannaDeletePost: 0,
                    ratContent:"",
                    ratReason:"",
                }
            },
            methods: {
                //請求所有貼文資訊
                getPostsList() {
                    fetch(`/api/Post/GetPostsRel`)
                        .then(res => res.json())
                        .then(data => { this.posts = data.map(post => ({ ...post, expandState: false })); })
                        .catch(error => {console.log('fetch posts failed!')});
                },
                //請求檢舉項目
                getRatItemsList() {
                    fetch(`/api/Post/GetComplaintCategory`)
                        .then(res => res.json())
                        .then(data => { this.ratItems = data })
                        .catch(error => { console.log('fetch ratItems failed!') });
                },
                //按LIke變實心 尚未送回資料庫
                clickLike() {
                    event.target.classList.toggle('fa-solid');
                },
                //按貼文點點按鈕出現刪除貼文&檢舉貼文選項
                showDropDown() {
                    let target = null;
                    if (event.target.tagName.toLowerCase() != "button") {
                        target = event.target.parentElement;
                    } else {
                        target = event.target;
                    }
                    target.classList.toggle('show');
                },
                //顯示刪除貼文視窗
                showDelete(post) {
                    event.preventDefault();
                    $('.deleteBox').css("display","block");
                    this.wannaDeletePost = post.postId;
                },
                //取消刪除貼文視窗
                displayDeleteBox() {
                    event.preventDefault();
                    $('.deleteBox').css("display", "none");
                    this.wannaDeletePost = 0;
                },
                cancleDeleteBox(event) {
                    // if (event.key === "Escape") {
                    // event.preventDefault();
                    $('.deleteBox').css("display", "none");
                    this.wannaDeletePost = 0;
                    // }
                },
                //刪除貼文
                deletePost(wannnaDeletePost) {
                    fetch(`/api/Post/Unpost/${this.wannaDeletePost}`, {
                        method: 'PUT',
                        headers: {
                            "content-Type": "application/json"
                        }
                    })
                    .then(data => { 
                        console.log(data);
                        $('.deleteBox').css("display", "none");
                        this.wannaDeletePost = 0;
                        this.getPostsList()
                    })
                    .catch(error => {console.log('fetch delete posts failed!')});
                },
                //顯示檢舉貼文視窗 舉報者先寫死
                showRat(post) {
                    const reporter = 1000;
                    event.preventDefault();
                    console.log(post);
                    $('.ratBox').css("display", "block");
                    this.watingToRatPost.push(post.postId, reporter);
                },
                //取消檢舉貼文視窗
                displayRatBox(event) {
                    event.preventDefault();
                    $('.ratBox').css("display", "none");
                    this.watingToRatPost = [];
                    this.ratContent = '';
                    this.ratReason = '';
                },
                cancleRatbox() {
                    // if (event.key === "Escape") {
                    // event.preventDefault();
                    $('.ratBox').css("display", "none");
                    this.watingToRatPost = [];
                    this.ratContent = '';
                    this.ratReason = '';
                    // }
                },
                //檢舉貼文 //目前請求不過
                ratPost() {
                    let ratpost = {
                        "PostId": this.watingToRatPost[0],
                        "UserId": this.watingToRatPost[1],
                        "ReportItems": this.ratReason,
                        "Reason": this.ratContent,
                        "ReportTime": Date.now(),
                        "ProcessingStstus": 0
                    };
                    fetch('/api/Post/RatPostReview', {
                        method: "POST",
                        headers: {
                          "content-Type":"application/json"
                        },
                        body: JSON.stringify(ratpost)
                    })
                    .then(data => {
                        console.log(data);
                    })
                    .catch(err => {
                        console.log('檢舉失敗')
                    });
                    this.ratReason = "";
                    this.ratContent = "";
                    this.watingToRatPost = [];
                    $('.ratBox').css("display", "none");
                },
            },
            mounted() {
                this.getPostsList();
                this.getRatItemsList();
            },
        })
        .mount("#postPlatform");
    </script>
}
