    <style>
        #posts {
            padding-top: 20px;
            width: 50%;
            margin: 0 auto;
        }
        .author-details {
            display: flex;
            align-items: center;
            flex-grow: 1;
            justify-content: space-between;
        }
        .userAction a {
            padding-left: 10px;
        }

        .post-footer{
            display: flex;
            justify-content:flex-end;
            margin-top: 5px;
            gap:30px;
            margin-right:25px;
        }
        .commentInput{
            padding-bottom:0;
        }
        #commentText {
            width: 80%;
        }
        #commentSubmit {
            padding: 0;
            width: 15%;
        }
        .time{
            font-size: 12px;
            color: #888888;
        }
        summary {
            list-style: none;
            margin: 5px;
            text-align: center;
        }
        .btn-group .dropdown-toggle::after {
            display: none !important;
        }
        #btnMore:hover {
            color: #f24570;
            text-decoration: none;
        }
        .dropdown-menu{
           text-align:center;
        }
        .deleteBox{
            display:none;
            width: 250px;
            height:300px;
            background-color: white;
            position: sticky;
            left:40%;
            top:40%;
            border-radius: 10%;
            box-shadow: 0 3px 10px #888888;
            z-index:2;
            align-content:center;
            text-align:center;
        }
        .deleteBox > button {
            margin:20px;
        }
        .ratBox{
            display: none;
            width: 500px;
            height: 400px;
            background-color: white;
            position: sticky;
            left: 30%;
            top: 30%;
            border-radius: 10%;
            box-shadow: 0 3px 10px #888888;
            z-index: 2;
            align-content: center;
            text-align: center;
        }
        .ratBox > button {
            margin: 20px;
        }
        .ratBox > input, .ratBox > select {
            width:75%;
            margin:10px auto 10px;
            
        }
    </style>
}

