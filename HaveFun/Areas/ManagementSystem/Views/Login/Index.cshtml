@model HaveFun.Areas.ManagementSystem.DTOs.ManagementLoginDTO
<h2 style="text-align:center; margin-top:150px">後臺帳號登入</h2>
<div style="width:60%; margin:0 auto;">
    <form asp-area="ManagementSystem" asp-controller="Login" asp-action="Index" method="post">
        <div>
            <label asp-for="Account">帳號</label>
            <input type="text" asp-for="Account" class="form-control" />
            <span asp-validation-for="Account" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Password">密碼</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <p class="text-danger" style="text-align:center">@ViewData["error"]</p>
        <button class="btn btn-primary mt-3" type="submit">登入</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}